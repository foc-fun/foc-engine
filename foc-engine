#!/bin/bash
#
# foc-engine cli tool

PROJECT_ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
ONCHAIN_SCRIPTS_DIR=$PROJECT_ROOT/onchain/scripts
SCRIPTS_DIR=$PROJECT_ROOT/scripts

display_help() {
  echo "Usage: $0 [subcommand] [options...]"
  echo
  echo "Subcommands:"
  echo "  help                Display this help message"
  echo "  run                 Run the FOC engine"
  echo "  clean               Clean up the FOC engine"
  echo "  version             Show the version of the FOC engine"
  echo
  echo "Examples: $0 run --help"
}

# Parse subcommand
if [ $# -eq 0 ]; then
  echo "Error: no subcommand provided"
  display_help
  exit 1
fi

subcommand="$1"
shift

# Handle subcommands
case "$subcommand" in
  help)
    display_help
    ;;
  run)
    echo "Running FOC engine..."
    $SCRIPTS_DIR/run_foc_engine.sh "$@"
    ;;
  clean)
    echo "Cleaning up FOC engine..."
    $SCRIPTS_DIR/clean_foc_engine.sh "$@"
    ;;
  version)
    echo "FOC engine version v0.2.1"
    ;;
  *)
    echo "Error: unknown subcommand '$subcommand'"
    display_help
    exit 1
    ;;
esac
